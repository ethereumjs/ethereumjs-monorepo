{
  "extends": "@ethereumjs/config-tsc",
  "include": ["src/**/*.ts", "test/**/*.ts", "examples/**/*.ts"],
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "*": ["definitions/*"]
    },
    "outDir": "./dist",
    "typeRoots": ["definitions", "node_modules/@types"],
    "declaration": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "downlevelIteration": true
  }
}

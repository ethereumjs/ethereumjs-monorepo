{
  "name": "root",
  "private": true,
  "devDependencies": {
    "husky": "^4.2.5",
    "lerna": "^3.20.2"
  },
  "husky": {
    "hooks": {
      "//pre-push": "yarn run lint"
    }
  },
  "scripts": {
    "postinstall": "./scripts/load-submodules.sh",
    "bootstrap": "lerna bootstrap --ignore-scripts --include-dependencies --no-ci && yarn run build",
    "bootstrap:account": "yarn run bootstrap --scope @ethereumjs/account",
    "bootstrap:block": "yarn run bootstrap --scope @ethereumjs/block",
    "bootstrap:blockchain": "yarn run bootstrap --scope @ethereumjs/blockchain",
    "bootstrap:common": "yarn run bootstrap --scope @ethereumjs/common",
    "bootstrap:ethash": "yarn run bootstrap --scope @ethereumjs/ethash",
    "bootstrap:tx": "yarn run bootstrap --scope @ethereumjs/tx",
    "bootstrap:vm": "yarn run bootstrap --scope @ethereumjs/vm",
    "build": "lerna run build --stream",
    "build:tree": "lerna run build --stream --include-dependencies",
    "build:block": "yarn run build:tree --scope @ethereumjs/block",
    "build:blockchain": "yarn run build:tree --scope @ethereumjs/blockchain",
    "build:common": "yarn run build:tree --scope @ethereumjs/common",
    "build:ethash": "yarn run build:tree --scope @ethereumjs/ethash",
    "build:tx": "yarn run build:tree --scope @ethereumjs/tx",
    "build:vm": "yarn run build:tree --scope @ethereumjs/vm",
    "lint": "lerna run lint --stream --parallel",
    "lint:fix": "lerna run lint:fix --stream --parallel",
    "test": "lerna exec yarn run test --parallel",
    "coverage": "lerna run coverage --stream",
    "docs:build": "lerna run docs:build --ignore @ethereumjs/ethash",
    "clean": "rm -rf node_modules packages/*/node_modules packages/*/test-build packages/*/dist packages/*/dist.browser packages/*/coverage packages/*/.nyc_output"
  },
  "workspaces": [
    "packages/*"
  ]
}
